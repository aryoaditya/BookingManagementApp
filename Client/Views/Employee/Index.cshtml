@{
    Layout = "_Layout";
}

<div class="container">
    <div id="successAlert" class="alert alert-success" style="display: none;">
    </div>
    <div id="failAlert" class="alert alert-danger alert-dismissible fade show" style="display: none;"></div>
    <h1 class="text-center">Employee List</h1>
    <!-- Add Employee Buttom -->
    <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#employee-modal">
        <span>
            <i class="ti ti-user-plus"></i>
        </span>
        <span class="ms-3">Employee</span>
    </button>
    <!-- Add Employee Modal-->
    <div class="modal fade" id="employee-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="staticBackdropLabel">Add Employee</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="employeeForm" class="needs-validation" novalidate>
                    <div class="modal-body">
                        <div class="container">
                            <div id="add-fail" class="alert alert-danger" style="display: none;"></div>
                            <!-- Name -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">First name</label>
                                    <input type="text" class="form-control" id="firstName" name="firstName" required>
                                    <div class="invalid-feedback">
                                        First name is required.
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName" class="form-label">Last name</label>
                                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="" value="">
                                </div>
                            </div>
                            <!-- Birth and Gender -->
                            <div class="row">
                                <!-- Birth Date -->
                                <div class="col col-6 mb-3">
                                    <label for="birthDate" class="form-label">Birth Date</label>
                                    <input type="date" class="form-control" id="birthDate" name="birthDate" required>
                                    <div class="valid-feedback">
                                        Please enter birth date
                                    </div>
                                </div>
                                <!-- Gender -->
                                <div class="col col-6 mb-3">
                                    <label for="gender" class="form-label">Gender</label>
                                    <select class="form-select" aria-label="Select gender" id="gender" name="gender" required>
                                        <option selected disabled value="">Select gender</option>
                                        <option value=0>Female</option>
                                        <option value=1>Male</option>
                                    </select>
                                    <div class="valid-feedback">
                                        Please select gender
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Email -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="email" name="email" placeholder="you@example.com" required>
                                <div class="invalid-feedback">
                                    Please enter a valid email address.
                                </div>
                            </div>
                            <!-- Phone Number -->
                            <div class="mb-3">
                                <label for="phone-number" class="form-label">Phone Number</label>
                                <input type="text" class="form-control" id="phone-number" name="phoneNumber" required>
                                <div class="invalid-feedback">
                                    Please enter your phone number.
                                </div>
                            </div>
                            <!-- Hiring Date -->
                            <div class="mb-3">
                                <label for="hiringDate" class="form-label">Hiring Date</label>
                                <input type="date" class="form-control" id="hiringDate" name="hiringDate" required>
                                <div class="valid-feedback">
                                    Please enter hiring date.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button class="btn btn-primary" type="submit" id="submitEmployee">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Edit Employee Modal-->
    <div class="modal fade" id="editEmployeeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="staticBackdropLabel">Edit Employee</h4>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="editEmployeeForm" class="needs-validation" novalidate="">
                    <div class="modal-body">
                        <div class="container">
                            <div id="edit-fail" class="alert alert-danger" style="display: none;"></div>
                            <!-- NIK -->
                            <div class="mb-3">
                                <label for="nik" class="form-label">NIK</label>
                                <input id="editNik" class="form-control" type="text" placeholder="" aria-label="Disabled input NIK" disabled>
                            </div>
                            <!-- Name -->
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="firstName" class="form-label">First name</label>
                                    <input type="text" class="form-control" id="editFirstName" name="firstName" placeholder="" value="Aryo" required="">
                                    <div class="invalid-feedback">
                                        Valid first name is required.
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="lastName" class="form-label">Last name</label>
                                    <input type="text" class="form-control" id="editLastName" name="lastName" placeholder="" value="" required="">
                                    <div class="invalid-feedback">
                                        Valid last name is required.
                                    </div>
                                </div>
                            </div>
                            <!-- Birth and Gender -->
                            <div class="row">
                                <!-- Birth Date -->
                                <div class="col col-6 mb-3">
                                    <label for="birthDate" class="form-label">Birth Date</label>
                                    <input type="date" class="form-control" id="editBirthDate" name="birthDate">
                                </div>
                                <!-- Gender -->
                                <div class="col col-6 mb-3">
                                    <label for="gender" class="form-label">Gender</label>
                                    <select class="form-select" aria-label="Select gender" id="editGender" name="gender">
                                        <option id="female" value=0>Female</option>
                                        <option id="male" value=1>Male</option>
                                    </select>
                                </div>
                            </div>
                            
                            <!-- Email -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email</label>
                                <input type="email" class="form-control" id="editEmail" name="email" placeholder="you@example.com">
                                <div class="invalid-feedback">
                                    Please enter a valid email address for shipping updates.
                                </div>
                            </div>
                            <!-- Phone Number -->
                            <div class="mb-3">
                                <label for="phone-number" class="form-label">Phone Number</label>
                                <input type="text" class="form-control" id="editPhoneNumber" name="phoneNumber">
                                <div class="invalid-feedback">
                                    Please enter your phone number.
                                </div>
                            </div>
                            <!-- Hiring Date -->
                            <div class="mb-3">
                                <label for="hiringDate" class="form-label">Hiring Date</label>
                                <input type="date" class="form-control" id="editHiringDate" name="hiringDate">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" id="editSubmitEmployee">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- Delete Employee Confirmation Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="deleteModalTitle">Confirmation</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are you sure want to delete this data?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="deleteEmployee">Yes, delete it</button>
                </div>
            </div>
        </div>
    </div>
    <!-- Table -->
    <table id="employee-table" class="table table-bordered table-striped table-hover display" width="100%">
        <thead>
            <tr>
                <th>NIK</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Birth Date</th>
                <th>Gender</th>
                <th>Hiring Date</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
